<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/activity_background"
    tools:context=".RevFavorActivity">

    <!-- 상단 ActionBar -->
    <LinearLayout
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingHorizontal="4dp"
            android:src="@drawable/ic_arrow_back_24"
            app:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text="즐겨찾기"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_video_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/favor_video_height">

            <TextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- WebView 썸네일 가림용 오버레이 -->
            <View
                android:id="@+id/webviewOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:visibility="gone" />

            <!-- 프로그레스 -->
            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="#ffffff" />
            </LinearLayout>

            <!-- 에러 메시지 -->
            <LinearLayout
                android:id="@+id/ll_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#000000"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_error"
                    android:tint="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영상을 불러올 수 없습니다"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_error_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연결 시간 초과"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- CCTV 선택 안내 -->
            <TextView
                android:id="@+id/tv_select_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#000000"
                android:text="CCTV를 선택하세요"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvCopyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text=""/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/llRegFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/favor_on"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_regfavor"/>
    </LinearLayout>

    <!-- 광고 -->
    <LinearLayout
        android:id="@+id/ll_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
